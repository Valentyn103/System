<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button Width="64" Height="64" Content="Open" Margin="10" Click="Button_Open" />
            <Button Width="64" Height="64" Content="Close" Click="Button_Close" Margin="10" />
            <Button Width="64" Height="64" Content="Check" Click="Button_Check" Margin="10" />
            <Button Width="64" Height="64" Content="CloseAll" Click="Button_CloseAll" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
